<%= render "/pages/nav" %>
<div class="container-fluid">
    <div class="row main-content bg-color text-center p-5 text-light">
        <h1 class="font">Create Life's Moment</h1>
        <%= form_with scope: :category, url: create_category_path, class: "form-group text-success p-4", local: true do |f| %>

        <p>
            <%= f.text_field :name, class: "form_input fields", placeholder: "Enter your Life's Moment" %>
        </p>

        <p>
            <%= f.submit class: "btn btn-success" %>
        </p>
        <% end %>

    </div>
</div>