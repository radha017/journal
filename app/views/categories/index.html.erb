<%= render "/pages/nav" %>
<div class="container-fluid">
<div class="row main-content bg-color text-center p-5 text-light">

<h2 class="text-light font"> Life's Moments </h2>
<hr>
<% if @categories.present? %>
<% @categories.each do |cat|  %>
    <p> <%= link_to cat.name, show_category_path(cat.id) %> </p>
<% end %>
<% else %>
    <p> No Moment found </p>
<% end %>
<div>
<%= link_to "Create Life's Moments", new_category_path, class: "btn btn-success" %>
</div>
</div>
</div>