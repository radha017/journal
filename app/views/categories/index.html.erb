<%= render "/pages/nav" %>
<div class="container-fluid">
<div class="row main-content bg-color text-center p-5 text-light">
<h2 class="text-dark"> Categories </h2>
<hr>
<% if @categories.present? %>
<% @categories.each do |cat|  %>
<div>
    <h5> <%= link_to cat.name, show_category_path(cat.id), class: "text-decoration-none text-dark" %> <%= link_to "Edit", edit_category_path(cat), class: "btn btn-warning" %> </h5>
    <hr>
    </div>
<% end %>
<% else %>
    <p> No category available </p>
<% end %>
<div>
<br>
<%= link_to "Create new category", new_category_path, class: "btn btn-success" %>
</div>
</div>
</div>