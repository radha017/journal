<div class="container-fluid" >
<div class="row main-content bg-success text-center">
<div class="col-md-4 text-center company__info">
				<span class="company__logo"><h2><span ></span></h2></span>
				<h4 class="company_title">"Sign in, stay on track with TaskSync!"</h4>
			</div>
<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row lgin">
						<h2>Log In</h2>
					</div>
<div class="row">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group" ) do |f|  %>
  <div class="field row">
    <%= f.label :email, class: "fieldss" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input fields" %>
  </div>

  <div class="field row">
    <%= f.label :password, class: "fieldss" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form__input fields" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field fields">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-outline-success" %>
  </div>
<% end %>

<div class="bot">
  <p>Doesn't have an account? Start Your DiarySync Adventure
   <%= link_to "Create an Account", new_registration_path(resource_name), class: "text-reset" %>!<br>
   <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  </p>
  
</div>
</div>
</div>
 