<%= render "/pages/nav" %>
<div class="container-fluid" >
    <div class="row main-content bg-color text-center">
        <div class=" text-center p-5">
            <h2 > Tasks </h2>
          
        <%= link_to "Add new task", new_task_path, class: "btn btn-success" %>
        <% if @tasks.present? %>
                
                <table class="table">
            <thead>
                <tr>
                <th scope="col">Task</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            <% @tasks.each do |task, category| %>
                    <tr>
                    <th scope="row"><%= task.name %></th>
                    <td><%= task.body %></td>
                    <td><%= task.category.name %></td>
                    <td><%= task.date %></td>
                    <td><%= link_to "Edit", edit_task_path(task), class: "btn btn-warning" %>
                <%= link_to "Delete", destroy_task_path(task), method: :delete, class: "btn btn-danger" %></td>
                </tr>

                <% end %>
            </tbody>
            </table>

    <% else %>
    <h5>No Task Found</h5>
    <p>
        <%= link_to "Add new task", new_task_path, class: "text-decoration-none" %>
    </p>
    <% end %>
        </div>    

    </div>
</div>          